    <script>
        let currentFilter = null;
        let allData = [];
        let dashboardData = null;
        let currentCategory = 'ready';
        
        // Load dashboard data on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadDashboardData();
        });
        
        async function loadDashboardData() {
            try {
                // First load just the summary for fast initial render
                const summaryResponse = await fetch('/api/dashboard-summary');
                if (!summaryResponse.ok) {
                    throw new Error(`HTTP error! status: ${summaryResponse.status}`);
                }
                
                const summaryData = await summaryResponse.json();
                dashboardData = summaryData;
                
                // Render sidebar with counts immediately
                renderSidebar(summaryData.stats, summaryData.status_breakdown, summaryData.substatus_breakdown);
                updateLastUpdated(summaryData.last_updated);
                
                // Show empty table initially
                renderTable([]);
                document.getElementById('loading').style.display = 'none';
                document.getElementById('circuits-table').style.display = 'table';
                
                // Then load 'ready' category data by default
                await loadCategoryData('ready', 'Ready for Turn Up', summaryData.status_breakdown, summaryData.substatus_breakdown);
                
            } catch (error) {
                console.error('Error loading dashboard data:', error);
                document.getElementById('loading').style.display = 'none';
                document.getElementById('error').style.display = 'block';
                document.getElementById('error').textContent = 'Error loading dashboard data: ' + error.message;
            }
        }
        
        async function loadCategoryData(category, title, statusBreakdown, substatusBreakdown) {
            try {
                const response = await fetch(`/api/dashboard-category/${category}`);
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const categoryData = await response.json();
                allData = categoryData.data || [];
                
                // Update table with category data
                renderTable(allData);
                showCategoryDetails(category, title, statusBreakdown, substatusBreakdown);
                
            } catch (error) {
                console.error(`Error loading category ${category}:`, error);
                document.getElementById('error').style.display = 'block';
                document.getElementById('error').textContent = `Error loading ${title} data: ` + error.message;
            }
        }
        
        function updateLastUpdated(lastUpdated) {
            const lastUpdatedElement = document.getElementById('last-updated');
            if (lastUpdatedElement && lastUpdated) {
                lastUpdatedElement.textContent = `Last Updated: ${lastUpdated}`;
            }
        }
        
        function getReadyForEnablementCount(breakdown) {
            let count = 0;
            
            if (breakdown && breakdown.ready) {
                Object.entries(breakdown.ready).forEach(([status, statusCount]) => {
                    if (status.toLowerCase().includes('ready for enablement')) {
                        count += statusCount;
                    }
                });
            }
            
            return count;
        }
        
        function getConstructionCount(breakdown) {
            let count = 0;
            
            if (breakdown && breakdown.construction) {
                Object.values(breakdown.construction).forEach(statusCount => {
                    count += statusCount;
                });
            }
            
            // Add specific statuses from ready category
            if (breakdown && breakdown.ready) {
                const constructionStatusesToMove = [
                    'Construction Approved',
                    'Pending Scheduled Deployment', 
                    'Rescheduled/Waiting On New Activation Date'
                ];
                
                constructionStatusesToMove.forEach(status => {
                    if (breakdown.ready[status]) {
                        count += breakdown.ready[status];
                    }
                });
            }
            
            return count;
        }
        
        function getOtherCount(breakdown) {
            let count = 0;
            
            if (breakdown && breakdown.other) {
                Object.values(breakdown.other).forEach(statusCount => {
                    count += statusCount;
                });
            }
            
            if (breakdown && breakdown.ready && breakdown.ready['Order Cancellation Pending']) {
                count += breakdown.ready['Order Cancellation Pending'];
            }
            
            return count;
        }
        
        function getCustomerActionCount(breakdown) {
            let count = 0;
            
            // Original customer action count
            if (breakdown && breakdown.customer_action) {
                Object.values(breakdown.customer_action).forEach(statusCount => {
                    count += statusCount;
                });
            }
            
            // Add Information/Approval Needed From Sponsor
            if (breakdown && breakdown.sponsor_approval) {
                Object.values(breakdown.sponsor_approval).forEach(statusCount => {
                    count += statusCount;
                });
            }
            
            // Add Contact Required
            if (breakdown && breakdown.contact_required) {
                Object.values(breakdown.contact_required).forEach(statusCount => {
                    count += statusCount;
                });
            }
            
            return count;
        }
        
        // NEW: Function to get NOC Action Required count (excludes ROE/LOA signatures)
        function getNOCActionCount(breakdown, substatusBreakdown) {
            let count = 0;
            
            // Get all customer action, sponsor approval, and contact required items
            const categories = ['customer_action', 'sponsor_approval', 'contact_required'];
            
            categories.forEach(category => {
                if (breakdown && breakdown[category]) {
                    Object.values(breakdown[category]).forEach(statusCount => {
                        count += statusCount;
                    });
                }
            });
            
            // Subtract ROE/LOA signature items from the total
            if (substatusBreakdown) {
                categories.forEach(category => {
                    if (substatusBreakdown[category]) {
                        Object.entries(substatusBreakdown[category]).forEach(([substatus, subCount]) => {
                            if (substatus.toLowerCase().includes('roe/loa signature needed')) {
                                count -= subCount;
                            }
                        });
                    }
                });
            }
            
            return count;
        }

        // NEW: Function to get Real Estate Action Required count (only ROE/LOA signatures)
        function getRealEstateActionCount(breakdown, substatusBreakdown) {
            let count = 0;
            
            // Only count ROE/LOA signature items
            if (substatusBreakdown) {
                const categories = ['customer_action', 'sponsor_approval', 'contact_required'];
                categories.forEach(category => {
                    if (substatusBreakdown[category]) {
                        Object.entries(substatusBreakdown[category]).forEach(([substatus, subCount]) => {
                            if (substatus.toLowerCase().includes('roe/loa signature needed')) {
                                count += subCount;
                            }
                        });
                    }
                });
            }
            
            return count;
        }
        
        function renderSidebar(stats, breakdown, substatusBreakdown) {
            const actionItems = document.getElementById('action-items');
            
            const items = [
                {
                    id: 'ready',
                    number: getReadyForEnablementCount(breakdown),
                    label: 'üü° Ready for Turn Up',
                    className: 'ready'
                },
                {
                    id: 'noc_action',
                    number: getNOCActionCount(breakdown, substatusBreakdown),
                    label: 'üî¥ NOC Action Required',
                    className: 'noc-action'
                },
                {
                    id: 'real_estate_action',
                    number: getRealEstateActionCount(breakdown, substatusBreakdown),
                    label: 'üü† Real Estate Action Required',
                    className: 'real-estate-action'
                },
                {
                    id: 'construction',
                    number: getConstructionCount(breakdown),
                    label: 'üî® Construction',
                    className: 'construction'
                },
                {
                    id: 'other',
                    number: getOtherCount(breakdown),
                    label: '‚ö™ Other',
                    className: 'other'
                }
            ];
            
            actionItems.innerHTML = items.map(item => `
                <div class="action-item ${item.className}" data-category="${item.id}">
                    <div class="action-number">${item.number.toLocaleString()}</div>
                    <div class="action-label">${item.label}</div>
                </div>
            `).join('');
            
            // Add click handlers with on-demand loading
            document.querySelectorAll('.action-item').forEach(item => {
                item.addEventListener('click', async function() {
                    const category = this.dataset.category;
                    const label = this.querySelector('.action-label').textContent;
                    
                    // Update active state immediately
                    document.querySelectorAll('.action-item').forEach(i => i.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Load category data on-demand
                    await loadCategoryData(category, label, breakdown, substatusBreakdown);
                    
                    currentCategory = category;
                });
            });
            
            // Set default active state
            document.querySelector('[data-category="ready"]').classList.add('active');
        }
        
        function showCategoryDetails(category, label, breakdown, substatusBreakdown) {
            const titleElement = document.getElementById('details-title');
            const descriptionElement = document.getElementById('details-description');
            const substatusList = document.getElementById('substatus-list');
            
            // Update title
            titleElement.textContent = label;
            
            // Update description based on category
            const descriptions = {
                'ready': 'These circuits are fully prepared and ready to be turned up. Click on any substatus below to filter the table.',
                'noc_action': 'These circuits require NOC action including customer approvals, contact responses, and technical coordination (excludes ROE/LOA signatures). Click on any substatus below to filter the table.',
                'real_estate_action': 'These circuits require Real Estate action, specifically ROE/LOA signatures and related approvals. Click on any substatus below to filter the table.',
                'construction': 'These circuits are in various stages of construction or installation. Click on any substatus below to filter the table.',
                'other': 'These circuits have various other statuses that require attention. Click on any substatus below to filter the table.'
            };
            
            descriptionElement.textContent = descriptions[category] || 'Click on any substatus below to filter the table.';
            
            // Get substatus data for this category
            let substatusData = {};
            
            if (category === 'ready') {
                // Only show "Ready for Enablement" statuses
                if (breakdown.ready) {
                    Object.entries(breakdown.ready).forEach(([status, count]) => {
                        if (status.toLowerCase().includes('ready for enablement')) {
                            substatusData[status] = count;
                        }
                    });
                }
            } else if (category === 'construction') {
                // Include construction + moved statuses
                if (breakdown.construction) {
                    substatusData = { ...breakdown.construction };
                }
                if (breakdown.ready) {
                    const constructionStatusesToMove = [
                        'Construction Approved',
                        'Pending Scheduled Deployment', 
                        'Rescheduled/Waiting On New Activation Date'
                    ];
                    
                    constructionStatusesToMove.forEach(status => {
                        if (breakdown.ready[status]) {
                            substatusData[status] = breakdown.ready[status];
                        }
                    });
                }
            } else if (category === 'other') {
                // Include other + moved statuses
                if (breakdown.other) {
                    substatusData = { ...breakdown.other };
                }
                if (breakdown.ready && breakdown.ready['Order Cancellation Pending']) {
                    substatusData['Order Cancellation Pending'] = breakdown.ready['Order Cancellation Pending'];
                }
            } else if (category === 'noc_action') {
                // For NOC Action, show the actual substatus breakdown instead of status names
                // Include substatuses from customer action, sponsor approval, and contact required (excluding ROE/LOA)
                
                // Add customer action substatuses (excluding ROE/LOA)
                if (substatusBreakdown && substatusBreakdown.customer_action) {
                    Object.entries(substatusBreakdown.customer_action).forEach(([substatus, count]) => {
                        if (!substatus.toLowerCase().includes('roe/loa signature needed')) {
                            substatusData[substatus] = count;
                        }
                    });
                }
                
                // Add sponsor approval substatuses
                if (substatusBreakdown && substatusBreakdown.sponsor_approval) {
                    Object.entries(substatusBreakdown.sponsor_approval).forEach(([substatus, count]) => {
                        substatusData[substatus] = count;
                    });
                }
                
                // Add contact required substatuses
                if (substatusBreakdown && substatusBreakdown.contact_required) {
                    Object.entries(substatusBreakdown.contact_required).forEach(([substatus, count]) => {
                        substatusData[substatus] = count;
                    });
                }
                
                // If no substatus data, fall back to status counts
                if (Object.keys(substatusData).length === 0) {
                    if (breakdown.customer_action) {
                        Object.entries(breakdown.customer_action).forEach(([status, count]) => {
                            substatusData[status] = count;
                        });
                    }
                    if (breakdown.sponsor_approval) {
                        Object.entries(breakdown.sponsor_approval).forEach(([status, count]) => {
                            substatusData[status] = count;
                        });
                    }
                    if (breakdown.contact_required) {
                        Object.entries(breakdown.contact_required).forEach(([status, count]) => {
                            substatusData[status] = count;
                        });
                    }
                    
                    // Adjust for ROE/LOA in Customer Action Required
                    if (substatusBreakdown && substatusBreakdown.customer_action) {
                        let roeLOACount = 0;
                        Object.entries(substatusBreakdown.customer_action).forEach(([substatus, subCount]) => {
                            if (substatus.toLowerCase().includes('roe/loa signature needed')) {
                                roeLOACount = subCount;
                            }
                        });
                        
                        if (substatusData['Customer Action Required'] && roeLOACount > 0) {
                            substatusData['Customer Action Required'] -= roeLOACount;
                            if (substatusData['Customer Action Required'] === 0) {
                                delete substatusData['Customer Action Required'];
                            }
                        }
                    }
                }
                
            } else if (category === 'real_estate_action') {
                // Only include ROE/LOA signature related items
                if (substatusBreakdown) {
                    const categories = ['customer_action', 'sponsor_approval', 'contact_required'];
                    categories.forEach(cat => {
                        if (substatusBreakdown[cat]) {
                            Object.entries(substatusBreakdown[cat]).forEach(([substatus, subCount]) => {
                                if (substatus.toLowerCase().includes('roe/loa signature needed')) {
                                    substatusData[substatus] = subCount;
                                }
                            });
                        }
                    });
                }
            } else if (category === 'customer_action') {
                // Include customer action + sponsor approval + contact required statuses
                if (breakdown.customer_action) {
                    Object.entries(breakdown.customer_action).forEach(([status, count]) => {
                        substatusData[status] = count;
                    });
                }
                return;
            } else {
                // Use substatus breakdown for other categories
                substatusData = substatusBreakdown[category] || {};
            }
            
            // Render substatus list
            if (Object.keys(substatusData).length === 0) {
                substatusList.innerHTML = '<div class="no-data">No items in this category</div>';
            } else {
                substatusList.innerHTML = Object.entries(substatusData)
                    .sort(([,a], [,b]) => b - a)
                    .map(([substatus, count]) => `
                        <div class="substatus-item" data-category="${category}" data-substatus="${substatus}">
                            <span class="substatus-name">${substatus}</span>
                            <span class="substatus-count">${count}</span>
                        </div>
                    `).join('');
                
                // Add click handlers to substatus items
                document.querySelectorAll('.substatus-item').forEach(item => {
                    item.addEventListener('click', function() {
                        const category = this.dataset.category;
                        const substatus = this.dataset.substatus;
                        
                        // Visual feedback
                        document.querySelectorAll('.substatus-item').forEach(i => i.classList.remove('clicked'));
                        this.classList.add('clicked');
                        
                        // Apply filter - use different logic based on category
                        if (category === 'ready' || category === 'construction' || category === 'other') {
                            applyStatusFilter(substatus);
                        } else if (category === 'noc_action') {
                            applyNOCActionFilter(substatus);
                        } else if (category === 'real_estate_action') {
                            applyRealEstateActionFilter(substatus);
                        } else if (category === 'customer_action') {
                            // For customer action, use status-based filtering since we consolidated categories
                            applyStatusFilter(substatus);
                        } else {
                            applySubstatusFilter(category, substatus);
                        }
                    });
                });
            }
        }
        
        // NEW: Filter function for NOC Action items
        function applyNOCActionFilter(substatus) {
            document.getElementById('filter-info').style.display = 'block';
            document.getElementById('filter-description').textContent = `NOC Action: ${substatus}`;
            
            currentFilter = `noc_action:${substatus}`;
            
            const filteredData = allData.filter(row => {
                const status = (row.status || '').toLowerCase();
                const rowSubstatus = (row.substatus || '').toLowerCase();
                const isCustomerAction = ['customer_action', 'sponsor_approval', 'contact_required'].includes(row.status_category);
                const isNotROELOA = !rowSubstatus.includes('roe/loa signature needed');
                
                return isCustomerAction && isNotROELOA && 
                       (status === substatus.toLowerCase() || rowSubstatus.includes(substatus.toLowerCase()));
            });
            
            renderTable(filteredData);
        }

        // NEW: Filter function for Real Estate Action items
        function applyRealEstateActionFilter(substatus) {
            document.getElementById('filter-info').style.display = 'block';
            document.getElementById('filter-description').textContent = `Real Estate Action: ${substatus}`;
            
            currentFilter = `real_estate_action:${substatus}`;
            
            const filteredData = allData.filter(row => {
                const rowSubstatus = (row.substatus || '').toLowerCase();
                const isCustomerAction = ['customer_action', 'sponsor_approval', 'contact_required'].includes(row.status_category);
                
                return isCustomerAction && rowSubstatus.includes('roe/loa signature needed') &&
                       rowSubstatus.includes(substatus.toLowerCase());
            });
            
            renderTable(filteredData);
        }
        
        function applyCategoryFilter(category, label) {
            let filteredData = [];
            
            if (category === 'ready') {
                filteredData = allData.filter(row => {
                    return row.status_category === 'ready' && 
                           (row.status || '').toLowerCase().includes('ready for enablement');
                });
            } else if (category === 'noc_action') {
                filteredData = allData.filter(row => {
                    const isCustomerAction = ['customer_action', 'sponsor_approval', 'contact_required'].includes(row.status_category);
                    const isNotROELOA = !(row.substatus || '').toLowerCase().includes('roe/loa signature needed');
                    return isCustomerAction && isNotROELOA;
                });
            } else if (category === 'real_estate_action') {
                filteredData = allData.filter(row => {
                    const isCustomerAction = ['customer_action', 'sponsor_approval', 'contact_required'].includes(row.status_category);
                    const isROELOA = (row.substatus || '').toLowerCase().includes('roe/loa signature needed');
                    return isCustomerAction && isROELOA;
                });
            } else if (category === 'customer_action') {
                filteredData = allData.filter(row => {
                    return ['customer_action', 'sponsor_approval', 'contact_required'].includes(row.status_category);
                });
            } else if (category === 'construction') {
                const constructionStatuses = ['Construction Approved', 'Pending Scheduled Deployment', 'Rescheduled/Waiting On New Activation Date'];
                filteredData = allData.filter(row => {
                    return row.status_category === 'construction' || 
                           (row.status_category === 'ready' && constructionStatuses.includes(row.status));
                });
            } else if (category === 'other') {
                filteredData = allData.filter(row => {
                    return row.status_category === 'other' || 
                           (row.status_category === 'ready' && (row.status || '').includes('Order Cancellation Pending'));
                });
            } else {
                filteredData = allData.filter(row => row.status_category === category);
            }
            
            renderTable(filteredData);
            
            if (filteredData.length > 0) {
                document.getElementById('filter-info').style.display = 'block';
                document.getElementById('filter-description').textContent = label;
                currentFilter = `category:${category}`;
            } else {
                document.getElementById('filter-info').style.display = 'none';
            }
        }
        
        function applySubstatusFilter(category, substatus) {
            document.getElementById('filter-info').style.display = 'block';
            document.getElementById('filter-description').textContent = `${substatus} (${category})`;
            
            currentFilter = `${category}:${substatus}`;
            
            let filteredData = [];
            
            if (category === 'customer_action') {
                // For customer action, filter by status name since we consolidated multiple categories
                filteredData = allData.filter(row => {
                    const status = (row.status || '').toLowerCase();
                    return status === substatus.toLowerCase() ||
                           (row.status_category === 'customer_action' && (row.substatus || '').toLowerCase().includes(substatus.toLowerCase())) ||
                           (row.status_category === 'sponsor_approval' && (row.substatus || '').toLowerCase().includes(substatus.toLowerCase())) ||
                           (row.status_category === 'contact_required' && (row.substatus || '').toLowerCase().includes(substatus.toLowerCase()));
                });
            } else {
                // Standard substatus filtering for other categories
                filteredData = allData.filter(row => {
                    return row.status_category === category && 
                           (row.substatus || '').toLowerCase().includes(substatus.toLowerCase());
                });
            }
            
            renderTable(filteredData);
        }
        
        function applyStatusFilter(status) {
            document.getElementById('filter-info').style.display = 'block';
            document.getElementById('filter-description').textContent = status;
            
            currentFilter = `status:${status}`;
            
            const filteredData = allData.filter(row => {
                return (row.status || '').toLowerCase() === status.toLowerCase();
            });
            
            renderTable(filteredData);
        }
        
        function renderTableWithTOD(data) {
            const tbody = document.getElementById('circuits-tbody');
            const table = document.getElementById('circuits-table');
            const thead = table.querySelector('thead tr');
            
            // Add TOD column header if not already present
            if (!document.getElementById('tod-header')) {
                // Insert TOD header after Site Name
                const siteNameHeader = thead.querySelector('th');
                const todHeader = document.createElement('th');
                todHeader.id = 'tod-header';
                todHeader.textContent = 'TOD';
                todHeader.style.cssText = 'padding: 12px; text-align: left; font-weight: 600; background-color: #f8f9fa; border-bottom: 2px solid #dee2e6; white-space: nowrap;';
                siteNameHeader.insertAdjacentElement('afterend', todHeader);
            }
            
            // Hide SCTASK and Assigned To columns
            const headers = table.querySelectorAll('thead th');
            if (headers.length >= 11) {
                headers[9].style.display = 'none';  // SCTASK
                headers[10].style.display = 'none';  // Assigned To
            }
            
            tbody.innerHTML = data.map(row => {
                // Format TOD display
                let todDisplay = '';
                let todColor = '#212529';
                if (row.target_opening_date_text) {
                    todDisplay = row.target_opening_date_text;
                    todColor = row.target_opening_date_text === 'TBD' ? '#ffc107' : '#212529';
                } else if (row.target_opening_date) {
                    todDisplay = new Date(row.target_opening_date).toLocaleDateString();
                    todColor = '#28a745';
                } else {
                    todDisplay = '-';
                    todColor = '#6c757d';
                }
                
                return `
                    <tr>
                        <td>${row['Site Name'] || ''}</td>
                        <td style="color: ${todColor}; font-weight: 500;">${todDisplay}</td>
                        <td>${row['Site ID'] || ''}</td>
                        <td>${row['Circuit Purpose'] || ''}</td>
                        <td><span class="status-badge ${getStatusClass(row.status_category)}">${row.status || ''}</span></td>
                        <td>${row.substatus || ''}</td>
                        <td>${row.provider_name || ''}</td>
                        <td>${row.details_ordered_service_speed || ''}</td>
                        <td>${row.billing_monthly_cost || ''}</td>
                        <td style="display: none;"></td>
                        <td style="display: none;"></td>
                        <td>${row.date_record_updated || ''}</td>
                    </tr>
                `;
            }).join('');
            
            const rowCount = data.length;
            document.querySelector('.row-count').textContent = `Showing ${rowCount} rows`;
        }
        
        function renderTable(data) {
            // Remove TOD header if it exists
            const todHeader = document.getElementById('tod-header');
            if (todHeader) {
                todHeader.remove();
            }
            
            const tbody = document.getElementById('circuits-tbody');
            const table = document.getElementById('circuits-table');
            
            // Check if we're showing Ready for Turn Up data
            const showAssignmentColumns = currentCategory === 'ready' || 
                                        (currentFilter && currentFilter.includes('ready for enablement'));
            
            // Show/hide SCTASK and Assigned To columns in header
            const headers = table.querySelectorAll('thead th');
            if (headers.length >= 11) {
                headers[8].style.display = showAssignmentColumns ? '' : 'none';  // SCTASK
                headers[9].style.display = showAssignmentColumns ? '' : 'none';  // Assigned To
            }
            
            const sortedData = data.sort((a, b) => {
                const dateA = new Date(a.date_record_updated || '1900-01-01');
                const dateB = new Date(b.date_record_updated || '1900-01-01');
                return dateB - dateA;
            });
            
            tbody.innerHTML = sortedData.map(row => {
                // Check if this row should have editable fields (only for Ready for Enablement)
                const isEditable = row.status_category === 'ready';
                
                return `
                    <tr>
                        <td>${row['Site Name'] || ''}</td>
                        <td>${row['Site ID'] || ''}</td>
                        <td>${row['Circuit Purpose'] || ''}</td>
                        <td><span class="status-badge ${getStatusClass(row.status_category)}">${row.status || ''}</span></td>
                        <td>${row.substatus || ''}</td>
                        <td>${row.provider_name || ''}</td>
                        <td>${row.details_ordered_service_speed || ''}</td>
                        <td>${row.billing_monthly_cost || ''}</td>
                        ${showAssignmentColumns ? `
                            <td>
                                ${isEditable ? 
                                    `<input type="text" class="editable-field sctask-field" 
                                        data-site="${row['Site Name'] || ''}" 
                                        data-field="sctask_number" 
                                        value="${row.sctask_number || ''}" 
                                        placeholder="Enter SCTASK"
                                        style="width: 100%; border: 1px solid #ddd; padding: 2px 5px; border-radius: 3px;">` 
                                    : (row.sctask_number ? 
                                        `<a href="https://dtcprod.service-now.com/nav_to.do?uri=sc_task.do?sysparm_query=number=${row.sctask_number}" 
                                           target="_blank" 
                                           style="color: #007bff; text-decoration: none; border-bottom: 1px dashed #007bff;"
                                           title="Open ${row.sctask_number} in ServiceNow">
                                           ${row.sctask_number}
                                        </a>` 
                                        : '')}
                            </td>
                            <td>
                                ${isEditable ? 
                                    `<input type="text" class="editable-field assigned-to-field" 
                                        data-site="${row['Site Name'] || ''}" 
                                        data-field="assigned_to" 
                                        value="${row.assigned_to || ''}" 
                                        placeholder="Enter name"
                                        style="width: 100%; border: 1px solid #ddd; padding: 2px 5px; border-radius: 3px;">` 
                                    : (row.assigned_to || '')}
                            </td>
                        ` : ''}
                        <td>${row.date_record_updated || ''}</td>
                    </tr>
                `;
            }).join('');
        }
        
        function getStatusClass(category) {
            const classMap = {
                'enabled': 'status-enabled',
                'ready': 'status-ready',
                'customer_action': 'status-customer-action',
                'sponsor_approval': 'status-sponsor-approval',
                'contact_required': 'status-contact-required',
                'construction': 'status-construction',
                'canceled': 'status-canceled',
                'other': 'status-other'
            };
            return classMap[category] || 'status-other';
        }
        
        function clearFilter() {
            document.getElementById('filter-info').style.display = 'none';
            document.getElementById('search-input').value = '';
            document.querySelectorAll('.substatus-item').forEach(item => item.classList.remove('clicked'));
            currentFilter = null;
            renderTable(allData);
        }
        
        // Search functionality
        document.getElementById('search-input').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            
            if (searchTerm === '') {
                renderTable(allData);
                return;
            }
            
            const filteredData = allData.filter(row => {
                return Object.values(row).some(value => 
                    String(value).toLowerCase().includes(searchTerm)
                );
            });
            
            renderTable(filteredData);
        });
        
        function getFilteredData() {
            const searchTerm = document.getElementById('search-input').value.toLowerCase();
            if (searchTerm === '') {
                return allData;
            }
            
            return allData.filter(row => {
                return Object.values(row).some(value => 
                    String(value).toLowerCase().includes(searchTerm)
                );
            });
        }
        
        function exportToExcel() {
            const dataToExport = currentFilter ? 
                getFilteredData() : allData;
            
            // Create CSV content
            const headers = [
                'Site Name', 'Site ID', 'Circuit Purpose', 'Status', 'Substatus', 
                'Provider', 'Service Speed', 'Monthly Cost', 'SCTASK', 'Assigned To', 'Last Updated'
            ];
            
            const csvContent = [
                headers.join(','),
                ...dataToExport.map(row => [
                    `"${row['Site Name'] || ''}"`,
                    `"${row['Site ID'] || ''}"`,
                    `"${row['Circuit Purpose'] || ''}"`,
                    `"${row.status || ''}"`,
                    `"${row.substatus || ''}"`,
                    `"${row.provider_name || ''}"`,
                    `"${row.details_ordered_service_speed || ''}"`,
                    `"${row.billing_monthly_cost || ''}"`,
                    `"${row.sctask_number || ''}"`,
                    `"${row.assigned_to || ''}"`,
                    `"${row.date_record_updated || ''}"`
                ].join(','))
            ].join('\n');
            
            // Download
            const blob = new Blob([csvContent], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.style.display = 'none';
            a.href = url;
            a.download = `circuit_dashboard_${new Date().toISOString().split('T')[0]}.csv`;
            document.body.appendChild(a);
            a.click();
            window.URL.revokeObjectURL(url);
            document.body.removeChild(a);
        }
        
        function exportToPDF() {
            window.print();
        }
        
        // Handle editable field changes
        document.addEventListener('change', function(e) {
            if (e.target.classList.contains('editable-field')) {
                const siteName = e.target.getAttribute('data-site');
                const field = e.target.getAttribute('data-field');
                const value = e.target.value;
                
                // Save the assignment, passing the element
                saveAssignment(siteName, field, value, e.target);
            }
        });
        
        // Save assignment to database
        function saveAssignment(siteName, field, value, inputElement) {
            // Find both input fields for this site to get current values
            const row = inputElement.closest('tr');
            const sctaskInput = row.querySelector('.sctask-field');
            const assignedToInput = row.querySelector('.assigned-to-field');
            
            const data = {
                site_name: siteName,
                sctask_number: sctaskInput ? sctaskInput.value : null,
                assigned_to: assignedToInput ? assignedToInput.value : null
            };
            
            fetch('/api/save-assignment', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(result => {
                if (result.success) {
                    // Update the local data
                    const rowData = allData.find(row => row['Site Name'] === siteName);
                    if (rowData) {
                        rowData[field] = value;
                    }
                    
                    // If this is an SCTASK field and has a value, convert to link
                    if (field === 'sctask_number' && value) {
                        const linkHtml = `<a href="https://dtcprod.service-now.com/nav_to.do?uri=sc_task.do?sysparm_query=number=${value}" 
                                           target="_blank" 
                                           style="color: #007bff; text-decoration: none; border-bottom: 1px dashed #007bff;"
                                           title="Open ${value} in ServiceNow">
                                           ${value}
                                        </a>`;
                        
                        // Replace the input with the link
                        const td = inputElement.parentElement;
                        td.innerHTML = linkHtml;
                    }
                    
                    // Show success feedback
                    showNotification('Assignment saved successfully', 'success');
                } else {
                    showNotification('Error saving assignment', 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showNotification('Error saving assignment', 'error');
            });
        }
        
        
        // Show notification
        function showNotification(message, type = 'info') {
            // Create notification element
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                padding: 15px 20px;
                border-radius: 5px;
                color: white;
                font-size: 14px;
                z-index: 1000;
                animation: slideIn 0.3s ease-out;
            `;
            
            // Set color based on type
            const colors = {
                success: '#28a745',
                error: '#dc3545',
                warning: '#ffc107',
                info: '#17a2b8'
            };
            
            notification.style.background = colors[type] || colors.info;
            notification.textContent = message;
            
            document.body.appendChild(notification);
            
            // Remove after 3 seconds
            setTimeout(() => {
                notification.style.animation = 'slideOut 0.3s ease-out';
                setTimeout(() => {
                    document.body.removeChild(notification);
                }, 300);
            }, 3000);
        }
        
        // Add animation styles
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideIn {
                from {
                    transform: translateX(100%);
                    opacity: 0;
                }
                to {
                    transform: translateX(0);
                    opacity: 1;
                }
            }
            
            @keyframes slideOut {
                from {
                    transform: translateX(0);
                    opacity: 1;
                }
                to {
                    transform: translateX(100%);
                    opacity: 0;
                }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
</html>